<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/darker_gray"
    tools:context="com.example.android.crudapp.MainActivity">

   <TextView
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="Welcome to Employee DataBase"
       android:textSize="25dp"
       android:layout_gravity="center"
       android:layout_marginTop="25dp"
       android:textColor="@android:color/holo_red_dark"
       android:layout_marginBottom="20sp"
       android:layout_weight="0.5"
       />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add Employee"
        android:layout_gravity="center"
        android:id="@+id/addemp"
        android:background="@android:color/holo_purple"
        android:layout_marginBottom="20sp"
        android:layout_weight="1"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="View Employee"
        android:layout_gravity="center"
        android:id="@+id/viewemp"
        android:background="@android:color/holo_blue_dark"
        android:layout_marginBottom="20sp"
        android:layout_weight="1"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Update Employee"
        android:layout_gravity="center"
        android:id="@+id/updemp"
        android:background="@android:color/holo_orange_dark"
        android:layout_marginBottom="20sp"
        android:layout_weight="1"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Delete Employee"
        android:layout_gravity="center"
        android:id="@+id/delemp"
        android:background="@android:color/holo_green_dark"
        android:layout_marginBottom="20sp"
        android:layout_weight="1"
        />
</LinearLayout>
